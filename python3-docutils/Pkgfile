# Description:	Documentation Utilities for Python3
# URL:		https://pypi.python.org/pypi/docutils
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	python3

name=python3-docutils
_realname=docutils
version=0.20.1
release=2
source=(https://files.pythonhosted.org/packages/source/d/${_realname}/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	pip3 wheel -w dist --isolated --no-deps $PWD

	/usr/bin/pip3 install \
		--root-user-action=ignore \
		--no-warn-script-location \
		--ignore-installed \
		--no-deps dist/*.whl \
		--isolated \
		--root=$PKG

	# Remove .py extension and add version suffix to executable files.
	for f in /usr/bin/rst*.py; do
		ln -svf $(basename $f) /usr/bin/$(basename $f .py)
	done

	rm -r $PKG/usr/bin/__pycache__/
}
